<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg4"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AdminAddCountryFragment">
    <LinearLayout
        android:padding="10dp"
        android:backgroundTint="@color/jade"
        android:background="@drawable/round_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@color/transparent"
            android:id="@+id/fragadminaddcoun_backbtn"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/fraglibbook_titletxt"
        android:gravity="center"
        android:fontFamily="@font/interbold"
        android:textSize="25sp"
        android:text="Add Country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/fragadminaddcoun_img"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholderimg"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"
        android:text="ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/fragadminaddcoun_id"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:hint="ID"
        android:padding="10dp"
        android:background="@drawable/edt_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"
        android:text="Country Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/fragadminaddcoun_name"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:hint="Country name"
        android:padding="10dp"
        android:background="@drawable/edt_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragadminaddcoun_addbtn"
        android:text="ADD"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/jade"
        android:background="@drawable/round_low"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
</LinearLayout>