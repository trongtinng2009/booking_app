<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg4"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AdminHotelFragment">

    <TextView
        android:textColor="@color/white"
        android:backgroundTint="@color/jade"
        android:background="@drawable/round_bottom"
        android:id="@+id/fraglibbook_titletxt"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/interbold"
        android:textSize="25sp"
        android:text="Hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/fragadminhol_search"
        app:layout_constraintTop_toBottomOf="@id/fraglibbook_titletxt"
        app:iconifiedByDefault="false"
        app:queryHint="Search hotel"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/fragadmincoun_layout1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fragadminhol_search"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="4.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Sort by date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragadminhol_addbtn"
            android:textColor="@color/white"
            android:fontFamily="@font/interbold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Add Hotel"
            android:layout_weight="1.5"
            android:backgroundTint="@color/jade"
            android:background="@drawable/round_low"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:fontFamily="@font/interbold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragadmincoun_layout1"
        android:id="@+id/fragadminhol_total"
        android:text="Total: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragadminhol_rcv"
        android:paddingBottom="310dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/fragadminhol_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>