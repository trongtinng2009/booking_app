<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.BookingStaFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:elevation="10dp"
            android:background="@color/jade"
            android:id="@+id/adminbookcf_topbar"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="2"
                android:id="@+id/fragguestcoundel_backbtn"
                android:background="@color/transparent"
                android:src="@drawable/arrow_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="8"
                android:id="@+id/fragguestcoundel_countrytitle"
                android:fontFamily="@font/interbold"
                android:textSize="25sp"
                android:text="Booking statistic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/adminbookcf_btn"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/adminbookcf_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminbooksta_todayrev"
                android:layout_width="wrap_content"
                android:text="Today revenue"
                android:fontFamily="@font/interbold"
                android:padding="5dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_low"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminbooksta_todaybook"
                android:layout_width="wrap_content"
                android:text="Today booking"
                android:fontFamily="@font/interbold"
                android:padding="5dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_low"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminbooksta_todaypaid"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Today Paid"
                android:fontFamily="@font/interbold"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:background="@drawable/round_low"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <HorizontalScrollView
            app:layout_constraintTop_toBottomOf="@id/adminbookcf_btn"
            android:id="@+id/adminbookcf_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_margin="16dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminbooksta_btnmonthlyrev"
                android:layout_width="wrap_content"
                android:text="Monthly revenue"
                android:fontFamily="@font/interbold"
                android:padding="5dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_low"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminbooksta_btnmonthlybooking"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Monthly booking"
                android:fontFamily="@font/interbold"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:background="@drawable/round_low"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminbooksta_btnmonthlypaid"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Monthly paid"
                android:fontFamily="@font/interbold"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:background="@drawable/round_low"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/adminbookcf_result"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/adminbookcf_btn2"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adminbooksta_resulttxt"
                android:textSize="17sp"
                android:fontFamily="@font/interbold"
                android:text=""
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
            android:visibility="gone"
            android:id="@+id/adminbooksta_scroll1"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adminbookcf_result"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.recyclerview.widget.RecyclerView
                android:paddingBottom="150dp"
                android:id="@+id/adminbooksta_rcv"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
            <com.github.mikephil.charting.charts.BarChart
                android:visibility="gone"
                android:id="@+id/adminbooksta_barchart"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/adminbookcf_result"
                android:layout_height="350dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/adminbooksta_txtrev"
            android:padding="20dp"
            android:fontFamily="@font/interbold"
            android:textSize="30sp"
            android:text="Today Revenue: "
            app:layout_constraintTop_toBottomOf="@id/adminbookcf_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>