<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GuestDetailHotelFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fragguestholdel_banner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/fragguestholdel_hotelimg"
                android:alpha="0.8"
                android:scaleType="centerCrop"
                android:src="@drawable/japan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <RelativeLayout
        android:id="@+id/fragguestcoundel_topbar"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/grey"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/fragguestholdel_backbtn"
            android:background="@drawable/round_circle"
            android:src="@drawable/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            app:tint="@color/main_theme_lowgreen"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/fragguestholdel_favbtn"
            android:background="@drawable/round_circle"
            android:src="@drawable/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_gravity="bottom|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragguestholdel_bannername"
                    android:textColor="@color/white"
                    android:fontFamily="@font/interblack"
                    android:textSize="25sp"
                    android:text="PALACE HOTEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="2dp"
                    android:background="@drawable/round_medium"
                    android:id="@+id/fragguestholdel_bannerlocation"
                    android:fontFamily="@font/interbold"
                    android:textSize="13sp"
                    android:text="Tokyo,Japan - 2km to downtown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:padding="2dp"
                    android:background="@drawable/round_medium"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/fragguestholdel_ratingbanner"
                    android:progressTint="@color/jade"
                    android:rating="4"
                    style = "?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                    <TextView
                        android:id="@+id/fragguestholdel_revbannertxt"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/interbold"
                        android:text="800 reviews"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fragguestholdel_btnbook"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/interbold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/jade"
                    android:text="Book Now"
                    android:background="@drawable/round_medium"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <ScrollView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragguestholdel_banner"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/fragguestholdel_title"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragguestholdel_hotelname"
                    android:fontFamily="@font/interbold"
                    android:textSize="25sp"
                    android:text="PALACE HOTEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fragguestholdel_hotellocation"
                    android:fontFamily="@font/interregular"
                    android:textSize="16sp"
                    android:text="Tokyo,Japan - 2km to downtown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fragguestholdel_hotelhotline"
                    android:fontFamily="@font/interregular"
                    android:textSize="16sp"
                    android:text="Hotline : 01234567"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fragguestholdel_price"
                    android:fontFamily="@font/interregular"
                    android:textSize="16sp"
                    android:text="Price from: 2000$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/fragguestholdel_sale"
                android:layout_gravity="center"
                android:fontFamily="@font/interbold"
                android:textSize="18sp"
                android:layout_weight="1"
                android:text="50% sale off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragguestholdel_summary"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestholdel_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/interbold"
                android:textSize="18sp"
                android:text="Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/interregular"
                android:textSize="16sp"
                android:text="Hãy để chuyến đi của quý khách có một khởi đầu tuyệt vời khi ở lại khách sạn này,nơi có Wi-Fi miễn phí trong tất cả các phòng.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_medium"
            android:padding="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/fragguestholdel_summary"
            android:id="@+id/fragguestholdel_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragguestholdel_txtoverrate"
                    android:fontFamily="@font/interbold"
                    android:textSize="30sp"
                    android:textColor="@color/jade"
                    android:text="4.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/interregular"
                    android:textColor="@color/grey"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/fragguestholdel_txtoverrate"
                    android:text="Overall Rating"
                    android:id="@+id/fragguestholdel_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RatingBar
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/fragguestholdel_txt1"
                    android:layout_toRightOf="@id/fragguestholdel_txtoverrate"
                    android:id="@+id/fragguestholdel_ratingoveral"
                    android:progressTint="@color/jade"
                    android:rating="4"
                    style = "?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="5 stars : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/fragguestholdel_star5"
                    android:progressTint="@color/jade"
                    android:layout_marginRight="60dp"
                    android:progress="50"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="4 stars : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/fragguestholdel_star4"
                    android:progressTint="@color/jade"
                    android:layout_marginRight="60dp"
                    android:progress="50"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="3 stars : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/fragguestholdel_star3"
                    android:progressTint="@color/jade"
                    android:layout_marginRight="60dp"
                    android:progress="60"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="2 stars : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/fragguestholdel_star2"
                    android:progressTint="@color/jade"
                    android:layout_marginRight="60dp"
                    android:progress="50"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="1 stars : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:id="@+id/fragguestholdel_star1"
                    android:progressTint="@color/jade"
                    android:layout_marginRight="60dp"
                    android:progress="30"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragguestholdel_photo"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestholdel_rating"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/interbold"
                    android:textSize="18sp"
                    android:text="Photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:fontFamily="@font/interbold"
                    android:textColor="@color/jade"
                    android:text="View all >>"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragguestholdel_rcvimgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/fragguestholdel_photo"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragguestholdel_revtxt"
                        android:fontFamily="@font/interbold"
                        android:textSize="18sp"
                        android:text="Reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/fragguestholdel_allrev"
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:fontFamily="@font/interbold"
                        android:textColor="@color/jade"
                        android:text="View all >>"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragguestholdel_rcvreviews"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>