<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GuestProfileFragment">

    <LinearLayout
        android:elevation="10dp"
        android:background="@color/jade"
        android:id="@+id/guestprofile_topbar"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="6"
            android:id="@+id/fragguestcoundel_countrytitle"
            android:fontFamily="@font/interbold"
            android:textSize="25sp"
            android:text="Your Profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/guestprofile_topbar"
        android:id="@+id/guestprofile_nothaveacc"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/person_24px"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:fontFamily="@font/interbold"
            android:textSize="20sp"
            android:text="Đăng ký tài khoản"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragguestprofile_signupbtn"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/jade"
            android:text="Đăng ký"
            android:background="@drawable/round_low"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:textSize="18sp"
            android:text="Đăng nhập tài khoản"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragguestprofile_loginbtn"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/main_theme_medgreen"
            android:text="Đăng nhập"
            android:background="@drawable/round_low"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/guestprofile_haveacc"
        app:layout_constraintTop_toBottomOf="@id/guestprofile_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:background="@color/jade"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/useravt"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/guestprofile_guestname"
                android:fontFamily="@font/interbold"
                android:textSize="23sp"
                android:text="Nguyen Van A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/guestprofile_logoutbtn"
                android:backgroundTint="@color/lownavy"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:background="@drawable/round_low"
                android:fontFamily="@font/interbold"
                android:text="Log out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="150dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragguestprofile_favbtn"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/interregular"
            android:text="Favorite"
            android:drawableLeft="@drawable/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/interregular"
            android:text="Voucher"
            android:drawableLeft="@drawable/redeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/interregular"
            android:text="Your information"
            android:drawableLeft="@drawable/person_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/interregular"
            android:text="Your cart"
            android:drawableLeft="@drawable/shopping_cart_24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:fontFamily="@font/interbold"
                android:text="Help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/interregular"
                android:text="Customer care service"
                android:drawableLeft="@drawable/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/interregular"
                android:text="Contact"
                android:drawableLeft="@drawable/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:fontFamily="@font/interbold"
                android:text="Explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/interregular"
                android:text="Tourism blogs"
                android:drawableLeft="@drawable/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/interregular"
                android:text="Taxi"
                android:drawableLeft="@drawable/local_taxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:fontFamily="@font/interbold"
                android:text="Settings and policies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/interregular"
                android:text="Settings"
                android:drawableLeft="@drawable/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/interregular"
                android:text="Our policy"
                android:drawableLeft="@drawable/policy_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>