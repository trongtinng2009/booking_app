<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GuestCountryDetailFragment">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/fragguestcoundel_topbar"
          android:gravity="center"
          android:weightSum="10"
          android:orientation="horizontal"
          android:padding="10dp"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageButton
              android:layout_weight="1"
              android:id="@+id/fragguestcoundel_backbtn"
              android:background="@color/transparent"
              android:src="@drawable/arrow_back"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>
         <TextView
             android:gravity="center"
             android:layout_weight="9"
             android:id="@+id/fragguestcoundel_countrytitle"
             android:fontFamily="@font/interbold"
             android:textSize="25sp"
             android:text="LONDON"
             android:layout_width="0dp"
             android:layout_height="wrap_content"/>
      </LinearLayout>
      <androidx.appcompat.widget.SearchView
          android:id="@+id/fragguestcoundel_search"
          android:queryHint="Search locations"
          android:layout_margin="10dp"
          android:background="@drawable/edt_round"
          android:queryBackground="@color/transparent"
          app:layout_constraintTop_toBottomOf="@id/fragguestcoundel_topbar"
          app:iconifiedByDefault="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

       <RelativeLayout
           android:layout_marginTop="10dp"
           android:padding="10dp"
           app:layout_constraintTop_toBottomOf="@id/fragguestcoundel_search"
           android:id="@+id/fragguestcoundel_result"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/fragguestcoundel_resulttxt"
               android:layout_alignParentLeft="true"
               android:layout_gravity="left"
               android:fontFamily="@font/interregular"
               android:textSize="17sp"
               android:text=""
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <ImageButton
               android:layout_alignParentRight="true"
               android:background="@color/transparent"
               android:src="@drawable/filter_24px"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>

       <androidx.recyclerview.widget.RecyclerView
           android:paddingRight="10dp"
           android:paddingLeft="10dp"
           android:layout_marginTop="16dp"
           app:layout_constraintTop_toBottomOf="@id/fragguestcoundel_result"
           android:paddingBottom="280dp"
           android:id="@+id/fragguestcoundel_rcv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>