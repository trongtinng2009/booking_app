<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    tools:context=".Fragment.AdminRoomDetailFragment">
    <LinearLayout
        android:padding="10dp"
        android:backgroundTint="@color/jade"
        android:background="@drawable/round_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@color/transparent"
            android:id="@+id/fragadminroomdel_backbtn"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/fraglibbook_titletxt"
            android:gravity="center"
            android:fontFamily="@font/interbold"
            android:textSize="25sp"
            android:text="Room Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fragadminroomdel_img"
                android:layout_margin="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholderimg"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:enabled="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_id"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:hint="ID"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Room Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_name"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:hint="Room name"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:enabled="false"
                android:clickable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_holname"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Max Adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_maxal"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Max Adult"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Max Kid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_maxkid"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Max Kid"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Price Adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_priceal"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Price Adult"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Price Kid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_pricekid"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Price Kid"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_size"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Size (m2)"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Number of room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragadminroomdel_quan"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Number of room"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Old Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragadminroomdel_rcv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="New Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragadminroomdel_newimgrcv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginRight="10dp"
                    android:id="@+id/fragadminroomdel_addbtn"
                    android:text="CONFIRM CHANGE"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/jade"
                    android:background="@drawable/round_low"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fragadminroomdel_addimgbtn"
                    android:text="ADD IMAGES"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/jade"
                    android:background="@drawable/round_low"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>