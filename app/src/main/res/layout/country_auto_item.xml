<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_weight="3"
            android:id="@+id/coun_itemauto_img"
            app:riv_corner_radius="10dp"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/vietnam"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="7"
            android:gravity="center"
            android:paddingBottom="60dp"
            android:id="@+id/book_itemauto_detail"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/coun_itemauto_name"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Vietnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/coun_itemauto_id"
                android:fontFamily="@font/interregular"
                android:textSize="18sp"
                android:text="ID : book1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/jade"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>