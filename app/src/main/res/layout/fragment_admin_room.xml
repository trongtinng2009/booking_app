<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AdminRoomFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:backgroundTint="@color/jade"
            android:background="@drawable/round_bottom"
            android:id="@+id/fragguestchooseroom_topbar"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="1"
                android:id="@+id/fragadminroom_backbtn"
                android:background="@color/transparent"
                android:src="@drawable/arrow_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="9"
                android:id="@+id/fragadminroom_hoteltxt"
                android:fontFamily="@font/interbold"
                android:textSize="25sp"
                android:text="PALACE HOTEL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.appcompat.widget.SearchView
            android:id="@+id/fragadminroom_search"
            app:layout_constraintTop_toBottomOf="@id/fragguestchooseroom_topbar"
            app:iconifiedByDefault="false"
            app:queryHint="Search room"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/fragadminchooseroom_rdg"
            app:layout_constraintTop_toBottomOf="@id/fragadminroom_search"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/fragadminchooseroom_rdname"
                android:layout_marginRight="5dp"
                android:text="Search by name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/fragadminchooseroom_rdprice"
                android:layout_marginRight="5dp"
                android:text="Search by price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/fragadminchooseroom_rdcapicity"
                android:text="Search by capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <LinearLayout
            android:gravity="right"
            android:id="@+id/fragadminroom_layout1"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragadminchooseroom_rdg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:paddingLeft="5dp"
                android:id="@+id/fragadminroom_addroombtn"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:text="Add room"
                android:backgroundTint="@color/jade"
                android:background="@drawable/edt_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragadminroom_changeinfobtn"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:text="Change information"
                android:backgroundTint="@color/jade"
                android:background="@drawable/edt_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragadminroom_layout1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/fragadminroom_roomresult"
            android:fontFamily="@font/interbold"
            android:textSize="18sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="380dp"
            android:id="@+id/fragadminroom_rcvroom"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragadminroom_roomresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>