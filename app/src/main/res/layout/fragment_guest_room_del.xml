<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    tools:context=".Fragment.GuestRoomDelFragment">
    <LinearLayout
        android:id="@+id/fragguestcoundel_topbar"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_weight="2"
            android:id="@+id/fragguestroomdel_backbtn"
            android:background="@color/transparent"
            android:src="@drawable/arrow_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_weight="6"
            android:id="@+id/fragguestroomdel_countrytitle"
            android:fontFamily="@font/interbold"
            android:textSize="25sp"
            android:text="LONDON"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_weight="2"
            android:id="@+id/fragguestroomdel_favbtn"
            android:background="@color/transparent"
            android:src="@drawable/favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="100dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fragguestroomdel_img"
                android:layout_margin="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholderimg"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Room Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_name"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:hint="Room name"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_holname"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Max Adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_maxal"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Max Adult"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Max Kid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_maxkid"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Max Kid"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Price Adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_priceal"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Price Adult"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Price Kid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_pricekid"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Price Kid"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_size"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Size (m2)"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/interbold"
                android:textSize="20sp"
                android:text="Remain room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragguestroomdel_quan"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:hint="Number of room"
                android:padding="10dp"
                android:background="@drawable/edt_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragguestroomdel_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="20dp"
                android:id="@+id/fragguestroomdel_bookbtn"
                android:text="BOOK NOW"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/jade"
                android:background="@drawable/round_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>