<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity">
    <LinearLayout
        android:elevation="10dp"
        android:background="@color/jade"
        android:id="@+id/signup_topbar"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:layout_weight="2"
            android:id="@+id/signup_backbtn"
            android:background="@color/transparent"
            android:src="@drawable/arrow_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="6"
            android:id="@+id/fragguestcoundel_countrytitle"
            android:fontFamily="@font/interbold"
            android:textSize="25sp"
            android:text="Sign up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/signup_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/interbold"
            android:textSize="20sp"
            android:text="Phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/signup_phoneedt"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/call"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:hint="Nhập số điện thoại"
            android:padding="10dp"
            android:background="@drawable/edt_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:textSize="20sp"
            android:text="Fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/signup_nameedt"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/person_24px"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:hint="Nhập họ tên"
            android:padding="10dp"
            android:background="@drawable/edt_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:textSize="20sp"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/signup_mailedt"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/mail"
            android:layout_marginTop="10dp"
            android:hint="Nhập email"
            android:padding="10dp"
            android:background="@drawable/edt_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:textSize="20sp"
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/signup_passedt"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/lock"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu"
            android:padding="10dp"
            android:background="@drawable/edt_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:textSize="20sp"
            android:text="Reconfirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/signup_repassedt"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/lock"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Nhập lại mật khẩu"
            android:padding="10dp"
            android:background="@drawable/edt_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_signupbtn"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/jade"
            android:background="@drawable/round_low"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>