<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:elevation="10dp"
    android:backgroundTint="@color/lownavy"
    android:background="@drawable/round_low"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/successpopup_cancel"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/transparent"
        android:src="@drawable/cancel_32px"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <ImageView
        android:id="@+id/reg_libcard_popup_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/checked"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/reg_libcard_popup_title"
        app:layout_constraintRight_toRightOf="@id/reg_libcard_popup_img"
        app:layout_constraintLeft_toLeftOf="@id/reg_libcard_popup_img"
        app:layout_constraintTop_toBottomOf="@id/reg_libcard_popup_img"
        android:fontFamily="@font/interbold"
        android:textSize="23sp"
        android:text="THÀNH CÔNG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:fontFamily="@font/interregular"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bạn đã đăng ký tài khoản thành công !"
        app:layout_constraintTop_toBottomOf="@id/reg_libcard_popup_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/reg_libcard_popup_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/successpopup_btn"
        android:fontFamily="@font/interbold"
        android:textSize="23sp"
        android:text="OKAY"
        android:backgroundTint="@color/jade"
        android:background="@drawable/round_medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/reg_libcard_popup_txt"
        app:layout_constraintRight_toRightOf="@id/reg_libcard_popup_txt"
        app:layout_constraintLeft_toLeftOf="@id/reg_libcard_popup_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>